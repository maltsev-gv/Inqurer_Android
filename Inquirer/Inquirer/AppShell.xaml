    <Shell.MenuItemTemplate>
        <DataTemplate>
            <Grid BackgroundColor="Aqua">
                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.8*" />
                </Grid.ColumnDefinitions>
                <Image Source="{Binding Icon}"
                       Margin="5"
